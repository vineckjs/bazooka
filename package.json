{
  "name": "bazooka",
  "version": "0.0.1",
  "description": "Framework for building large scale applications",
  "private": true,
  "main": "index.js",
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20.17.0"
  },
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/web/**/*",
    "apps/mobile/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "husky": "^8.0.0",
    "turbo": "^2.0.14",
    "lint-staged": "^15.2.9"
  },
  "lint-staged": {
    "services/**/*.ts": [
      // "eslint --fix",
      // "prettier --write",
      // "turbo run build --filter ./services/**"
    ],
    "apps/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "turbo run build --filter ./apps/**"
    ]
  }
}
